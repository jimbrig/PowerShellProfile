    <command:examples>
      <command:example>
        <maml:title>-------------------------- EXAMPLE 1 --------------------------</maml:title>
        <dev:code>Clear-HostRaindrop -Mode 'Flipping' -Speed 0.5</dev:code>
        <dev:remarks>
          <maml:para>Clears the host and displays a Flipping raindrop animation with a playback speed of 0.5x.</maml:para>
        </dev:remarks>
      </command:example>
      <command:example>
        <maml:title>-------------------------- EXAMPLE 2 --------------------------</maml:title>
        <dev:code>Clear-HostRaindrop</dev:code>
